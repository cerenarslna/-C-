//Araba.cs
namespace METOT;

 class Araba
 { 
  
      public string marka = "Ford"; 
      public string model = "Focus";
      public string renk = "Mavi";
      public int yıl = 2022;

// Constructor (Yapıcı Metot)

    public Araba(string _marka, string _model, string _renk, int _yıl)
     {
         marka = _marka;    
         model = _model;
         renk = _renk;
         yıl = _yıl;
         
     }
      public void BilgiYazdır()
       {
           Console.WriteLine($"Marka: {marka}, Model: {model}, Renk: {renk}, Yıl :{yıl}");
       }


      /* public void DegerAta(string _marka, string _model, string _renk, int _yıl )
       {
           marka = _marka;
           model = _model;
           renk = _renk;
           yıl = _yıl;
       }  */
      
 }
